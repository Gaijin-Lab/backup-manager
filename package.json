{
  "name": "backup-manager",
  "version": "0.1.0",
  "description": "Intelligent incremental backup manager (Windows & Linux) built with TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "check": "tsc --noEmit",
    "backup": "tsx src/index.ts",
    "backup:watch": "tsx src/index.ts watch",
    "backup:check": "tsx src/index.ts check",
    "checkbackup": "tsx src/index.ts check",
    "list": "tsx src/index.ts list",
    "restore": "tsx src/index.ts restore",
    "delete": "tsx src/index.ts delete",
    "purge": "tsx src/index.ts purge",
    "clean": "rimraf dist repo"
  },
  "keywords": [
    "backup",
    "incremental-backup",
    "typescript",
    "cli",
    "cross-platform"
  ],
  "author": "Gaijin Lab",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/node": "^25.0.3",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
